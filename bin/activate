#!/usr/bin/env ruby
require 'Yogi'
require 'os'

if File.exists?(".git/.ignoremefile.txt")
  if OS.mac?
    cmd = ("say 'You fool can not activate me twice'")
    system cmd
  end
  puts 'You fool can not activate me twice'
else
  setup = Yogi::Setup.new
  setup.setup
  errorInside = Yogi::ErrorInside.new
  errorInside.backup
  errorInside.yogify
end
