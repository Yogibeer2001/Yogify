#!/usr/bin/env ruby

require 'Yogi'

if File.exists?(".git/.ignoremefile.txt")
  errorCheck = Yogi::CheckErrors.new
  errorCheck.checker
else
  if OS.mac?
      cmd = ("say 'You fool should activate me first'")
      system cmd
  end
  puts 'You should first activate the gem before you can check your progress'
end
